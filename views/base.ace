= doctype html
html lang=en
  head
    meta charset=utf-8
    {{if .Title}}
      title {{.Title}}
    {{else}}
      title Hub
    {{end}}

  body
    nav
      {{if .User}}
        a href="/" Home
        br
        a href="/{{.User}}/profile" Profile
        br
        a href="/logout" Logout
      {{else}}
        a href="/login" Login      
      {{end}}
    container
      = yield main